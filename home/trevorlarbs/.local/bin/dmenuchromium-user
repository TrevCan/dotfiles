#!/usr/bin/zsh

CHROMIUM_SCALE_FACTOR=1.3
# parameter expansion
# https://stackoverflow.com/a/11265493
# Licensed under CC BY-SA 3.0
# https://creativecommons.org/licenses/by-sa/3.0/
# $ echo "${str%%:*}"

SELECTED_USER=$(chromium-get-users |
				sort --reverse |
				dmenu -i -l 5 )
if [[ ${?} = 1 ]]
then
	notify-send "dmenu - chromium" "No user chosen. Exiting..."
	exit 1
fi
USER_DIRECTORY="${SELECTED_USER##*: }"
# echo $USER_DIRECTORY

# --app to open new window
# FLAGS=" --profile-directory="
# chromium --disable-gpu --enable-pinch --force-device-scale-factor=$CHROMIUM_SCALE_FACTOR $FLAGS"$USER_DIRECTORY" \
chromium --enable-pinch --force-device-scale-factor=$CHROMIUM_SCALE_FACTOR --profile-directory="$USER_DIRECTORY" \
	&

