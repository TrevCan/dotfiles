# < ~/.config/chromium/Local\ State \
# | jq -r '.profile.info_cache|to_entries|map(.key + ": " + .value.name)|.[]' \
# | sort -k2,2n

cat ~/.config/chromium/Local\ State  \
| jq -r '.profile.info_cache|to_entries|map(.value.name + ": " + .key)|.[]' \
| sort -k2,2n



# one might user something like
# chromium-get-users | dmenu -i -l 10
# to get the selected profile
