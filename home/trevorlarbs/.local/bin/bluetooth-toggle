if [[ "$(/usr/bin/bluetoothctl show | grep 'Powered: yes')" ]];
then;
	echo was ON;

	bluetoothctl power off && \
	notify-send -u normal -i ~/Pictures/harald-linux.jpg 'bluetooth is OFF' 'Power is now OFF. Was previously on.'

else;
	echo was OFF;

	bluetooth on;
	bluetoothctl power on && \
	notify-send -u normal -i ~/Pictures/harald-linux.jpg 'bluetooth is ON' 'Power is now ON. Was previously off.'

fi


